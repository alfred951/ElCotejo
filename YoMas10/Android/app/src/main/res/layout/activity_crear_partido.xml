<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:rowCount="10"
    android:columnCount="1"
    tools:context="co.edu.eafit.yomas10.Equipos.CrearPartidoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/negro"
        android:layout_row="0"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fechaPartido"
        android:layout_row="1"
        android:onClick="elegirFecha"
        android:hint="1 de Enero"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora"
        android:textColor="@color/negro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_row="2"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="19:00"
        android:onClick="elegirHora"
        android:id="@+id/horaPartido"
        android:layout_row="3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancha"
        android:textColor="@color/negro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_row="4"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="El templo del Futbol"
        android:id="@+id/canchaPartido"
        android:layout_row="5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Integrantes"
        android:textColor="@color/negro"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_row="6"/>

    <ListView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_row="7"
        android:id="@+id/jugadores"/>

    <!--TextView
        android:text="@string/sinElementos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emptyText"/-->
</GridLayout>
