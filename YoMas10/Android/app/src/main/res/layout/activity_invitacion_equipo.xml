<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="co.edu.eafit.yomas10.InvitacionEquipo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre del Equipo:"
        android:id="@+id/equipoTV"
        android:textColor="@color/negro"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equipo"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:layout_column="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capitan"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/negro"
        android:layout_columnSpan="2"
        android:layout_row="2"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/capitan"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"/>

    <ListView
        android:layout_height="260dp"
        android:layout_width="wrap_content"
        android:id="@+id/jugadores"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accept"
        android:text="@string/aceptar"
        android:onClick="aceptarEquipo"
        android:layout_row="5"
        android:layout_column="0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rechazar"
        android:id="@+id/decline"
        android:onClick="rechazarEquipo"
        android:layout_row="5"
        android:layout_column="1"/>
</GridLayout>
